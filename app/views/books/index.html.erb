<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", destroy_list_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
		<% end %>
	</tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, url:'/books', method: :post do |f| %>

<div class="field">
	<label for="book_title">Title</label>
	 <%= f.text_field :title %>
</div>

<div class="field">
	<label for="book_title">Body</label>
	 <%= f.text_area :body %>
</div>

 <div class="action">
 <%= f.submit 'Creat Book' %>
 </div>
<% end %>

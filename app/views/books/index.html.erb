<h1>Books</h1>

<table>
	<thead>
		<tr>
			<th>title</th>
			<th>body</th>
			<th colspan="3"></th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book) %></td>
			<td><%= link_to "Destroy", destroy_list_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
		<% end %>
	</tbody>
</table>


<h2>New book</h2>
<%= form_with model: @book, url:'/books', method: :post do |f| %>
 <h4>title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Creat Book' %>
<% end %>
